{
  "manifest_version": 2,

  "name": "news extension",
  "description": "This extension allows the user to see top 10 breaking news",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "version": "3.0",
  "icons": {
    "64": "icon.png",
    "32": "icon.png",
    "16": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["myscript.js"]
    }
  ]
}
